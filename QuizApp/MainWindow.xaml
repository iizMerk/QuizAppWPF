<Window x:Class="QuizApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,0,1,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtusername" HorizontalAlignment="Left" Height="23" Margin="298,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" RenderTransformOrigin="0.5,0.5" TextChanged="textBox_TextChanged"/>
        <TextBox x:Name="txtpass" HorizontalAlignment="Left" Height="23" Margin="298,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" />
        <Button x:Name="btnlogin" Content="Button" HorizontalAlignment="Left" Margin="340,258,0,0" VerticalAlignment="Top" Width="87" Click="btnlogin_Click" Height="26"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top" Width="267" Margin="0,10,0,0" Source="Images/LogoQuizAPP.png"/>
    </Grid>
</Window>
